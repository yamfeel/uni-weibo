// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": ["userName", "password", "nickName"],
	"permission": {
		"read": false,
		"create": false,
		"update": false,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"userName": {
			"title": "用户名",
			"bsonType": "string",
			"trim": "both",
			"description": "唯一"
		},
		"password": {
			"title": "密码",
			"bsonType": "string",
			"trim": "both",
			"description": "唯一"
		},
		"nickName": {
			"title": "昵称",
			"bsonType": "string",
			"trim": "both",
			"description": "唯一"
		},
		"gender": {
			"title": "性别",
			"bsonType": "int",
			"description": "性别012，0默认",
			"defaultValue": "0"
		},
		"picture": {
			"title": "头像",
			"bsonType": "string",
			"trim": "both",
			"description": "头像地址"
		},
		"city": {
			"title": "城市",
			"bsonType": "string",
			"trim": "both"
		},
		"email": {
			"bsonType": "string",
			"format": "email",
			"title": "邮箱",
			"description": "邮箱地址",
			"trim": "both"
		},
		"portNum": {
			"title": "端口数",
			"bsonType": "int",
			"description": "默认0",
			"defaultValue": "0"
		},
		"token": {
			"title": "令牌",
			"bsonType": "string",
			"trim": "both",
			"description": "最近一次登录生成的token",
			"defaultValue": "0"
		},
		"login_log": {
			"title": "登录日志",
			"bsonType": "object",
			"description": "[{login_date，login_ip}]头部与尾部相隔不大于一年"
		},
		"register_date": {
			"bsonType": "timestamp",
			"description": "注册时间",
			"defaultValue": {
				"$env": "now"
			}
		},
		"register_ip": {
			"bsonType": "string",
			"description": "注册时 IP 地址",
			"defaultValue": {
				"$env": "clientIP"
			}
		}
	}
}
